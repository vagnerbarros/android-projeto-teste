<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6E7E8"
    android:padding="0dp"
    tools:context=".cadastroActivity" >

    <ImageView
        android:id="@+id/icone_categoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:adjustViewBounds="false"
        android:contentDescription="@string/app_name"
        android:src="@drawable/logo_inicio" />

    <Button
        android:id="@+id/btVoltarLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/bt_bottom"
        android:gravity="right"
        android:padding="20dp"
        android:text="@string/txt_voltar_login"
        android:textColor="#FEFEFE" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btVoltarLogin"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/icone_categoria"
        android:layout_marginTop="20dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:orientation="vertical" >
            
            <EditText
                android:id="@+id/txtEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/icone_categoria"
                android:layout_margin="20dp"
                android:layout_marginBottom="0dp"
                android:layout_marginTop="39dp"
                android:background="@drawable/edit_text_borda"
                android:ems="10"
                android:hint="@string/txtDigiteEmail"
                android:inputType="textEmailAddress"
                android:padding="15dp"
                android:textColor="#201E1E"
                android:textColorHint="#BDBFC1">
                
                <requestFocus />
            
            </EditText>

            <Button
                android:id="@+id/btRecuperar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/txtEmail"
                android:layout_alignRight="@+id/txtEmail"
                android:layout_alignTop="@+id/txtEmail"
                android:layout_marginTop="60dp"
                android:background="@drawable/bt_main"
                android:padding="15dp"
                android:text="@string/txtRecuperarSenha"
                android:textColor="#FEFEFE" />
            
		</RelativeLayout>

    </ScrollView>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/btVoltarLogin"
        android:layout_marginLeft="16dp"
        android:contentDescription="@string/iconBack"
        android:src="@drawable/icon_bt_voltar" />

</RelativeLayout>